<div class="booyah-box col-10 offset-1">
  <h1><%= @place.name %></h1>
  <i><%= @place.address %></i>
  <br/><br/>
  <p><%= @place.description %></p>
  <br/><br/>
 <div class="booyah-box03 col-10 offset-1">
    <% @place.photos.each do |photo| %>
    <%= image_tag photo.picture.url.to_s, class: "placepic"  %>
    <%= photo.caption %>
    <% end %>
 </div>

<!-- googlemap -->
<div class="booyah-box01 col-10 offset-1">
  <% if @place.latitude.present? && @place.longitude.present? %>
 
    <script>

    function initMap() {
      var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};
 

      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 12,
        center: myLatLng
      });

      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Hello World!'
      });
    }

    </script>

  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['MAP_API_KEY'] %>&callback=initMap">
  </script>

  <div id="map"></div>
  <% end %>
</div>
<!-- googlemap -->
  <br />

    <div class="col-10 offset-1">
      <% if current_user && current_user == @place.user %>
        <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-warning float-right' %>
        <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this?'}, class: 'btn btn-danger float-right' %>
      <% end %>
    
    </div>

  
  <br /><br />
  <div class="clear"></div>

    <div class="col-10 offset-1">
      <h1 class="float-left">Comments</h1>
      <!-- Button trigger modal for photo-->
      <button type="button" id="bpic" class="btn btn-success btn-lg float-right" data-toggle="modal" data-target="#myModal_02">
        Add an Image
      </button>
      <!-- Button trigger modal for comment-->
      <button type="button" class="btn btn-primary btn-lg float-right" data-toggle="modal" data-target="#myModal">
        Add a comment
      </button>

    </div>

    <div class="clear"></div>
    <!-- Modal For Comment -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Add a comment</h4>
          </div>
          <div class="modal-body">
            <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
             <%= f.input :message %>
             <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "Add a Comment", class: 'btn btn-primary' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>


   <br />
  <div class="clear"></div>


    <div class="clear"></div>
    <!-- Modal for Picture  -->
    <div class="modal fade" id="myModal_02" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Add an image</h4>
          </div>
          <div class="modal-body">
             <%= simple_form_for @photo, url: place_photos_path(@place) do |photo| %>
             <%= photo.input :caption %>
             <%= photo.input :picture %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= photo.submit "Add an Image", class: 'btn btn-primary' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>   

</div>

<div class="row">
<% @place.comments.each do |comment| %>
 <div class="col-12 col-sm-6">
   <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
   </blockquote>
 </div>
<% end %>
</div>